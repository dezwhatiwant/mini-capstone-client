<br>
<select name="sorting_products" onchange="location = this.value;">
  <option value="/">Sort Products By</option>
  <option value="/client/products?sort_by=price">Price - Low to High</option>
  <option value="/client/products?sort_by=price&&sort_order=desc">Price - High to Low</option>
  <option value="/client/products?sort_by=name">Name - A to Z</option>
  <option value="/client/products?sort_by=name&&sort_order=desc">Name - Z to A</option>
</select>

<select name="filtering_products" onchange="location = this.value;">
  <option value="/">Filter Products By</option>
  <option value="/client/products?category=Cheap">Cheap</option>
  <option value="/client/products?category=Expensive">Expensive</option>
  <option value="/client/products?category=Indoor">Indoor Use</option>
  <option value="/client/products?category=Outdoor">Outdoor Use</option>
</select>
<br>
<br>

<div class="row">
  <% @products.each do |product| %>
    <div class="card mb-5" style="width: 23rem;">
      <img class="card-img-top" src="<%= product["images"][0]["url"] %>">
      <div class="card-body">
        <h5 class="card-title"><%= product["name"] %></h5>
        <p class="card-text"><%= product["description"] %></p>
      </div>
      <div class="card-footer">
        <a href="/client/products/<%= product["id"] %>" class="btn btn-primary">Product Info</a>
      </div>
    </div>
  <% end %>
</div>