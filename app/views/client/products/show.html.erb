<h2><%= @product["name"] %></h2>
<h3>Product ID: <%= @product["id"] %></h3>
<h3>Price: <%= @product["formatted"]["price"] %></h3>
<h6>Tax: <%= @product["formatted"]["tax"] %></h6>
<h6>Total: <%= @product["formatted"]["total"] %></h6>
<h4>Description: <%= @product["description"] %></h4>

<% @product["images"].each do |image| %>
  <img src="<%= image["url"] %>" height="275" width="300">
<% end %>
<br>

<%= form_tag "/client/carted_products", method: :post do %>
  <input type="hidden" name="product_id" value="<%= @product['id'] %>">
  <div>
    Quantity: <input type="text" name ="quantity">
  </div>
  <input type="submit" value="Add to Cart">
<% end %>


<h6>Supplier: <%= @product["supplier"]["name"] %></h6>


<a href="/client/products/<%= @product['id'] %>/edit">Edit</a>
<a href="/client/products/<%= @product['id'] %>" data-method="delete">Delete</a>
